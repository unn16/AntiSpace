import functools
from tkinter import Tk, Canvas, mainloop, NW
from PIL import Image, ImageTk
import time

window_width = 450
window_height = 700

block_width = 1
block_height = 1

tk = Tk()
c = Canvas(tk, width=window_width, height=window_height, bg='white')
c.pack()

sky_image = ImageTk.PhotoImage((Image.open("sky.jpg").resize((window_width, window_height))))

for i in range(1):
    for j in range(1):
        c.create_image(i * block_width, j * block_height, image=sky_image, anchor=NW)

player_image = ImageTk.PhotoImage((Image.open("ship.png").convert('RGBA').resize((80,80))))

player = c.create_image(window_width/2-40, window_height-180, image=player_image, anchor=NW)
